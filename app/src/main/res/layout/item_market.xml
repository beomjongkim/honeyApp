<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".point.view.adapter.MarketAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/market_round_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/default_margin_10dp">

            <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/img_base"
                android:id="@+id/civ_item_market_image"
                android:layout_width="@dimen/default_margin_100dp"
                android:layout_height="@dimen/default_margin_100dp"
                app:civ_border_color="@color/color_gray"
                app:civ_border_width="@dimen/default_margin_1dp" />

            <TextView
                                style="@style/baseTextViewStyle"
                android:id="@+id/tv_item_market_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_40dp"
                android:layout_marginTop="@dimen/default_margin_10dp"
                android:layout_marginBottom="@dimen/default_margin_10dp"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                tools:ignore="SpUsage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_margin_40dp"
            android:background="@drawable/market_round_bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                                style="@style/baseTextViewStyle"
                android:id="@+id/tv_item_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_main"
                android:textSize="@dimen/text_normal"
                tools:ignore="SpUsage" />

            <TextView
                                style="@style/baseTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_5dp"
                android:text="@string/market_item_coin"
                android:textSize="@dimen/text_normal"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
