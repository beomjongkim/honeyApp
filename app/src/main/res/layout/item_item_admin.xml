<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".item.view.adapter.ItemAdapter">

    <RelativeLayout
        android:id="@+id/rl_item_item_admin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/default_margin_10dp"
        android:paddingTop="@dimen/default_margin_5dp"
        android:paddingRight="@dimen/default_margin_10dp"
        android:paddingBottom="@dimen/default_margin_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_item_item_admin_image"
            android:layout_width="@dimen/default_margin_50dp"
            android:layout_height="@dimen/default_margin_50dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_margin_10dp"
            android:layout_toRightOf="@+id/iv_item_item_admin_image"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_item_item_admin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/default_margin_5dp"
                    android:layout_toLeftOf="@+id/tv_item_item_admin_time"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    tools:ignore="SpUsage" />

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_item_item_admin_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/text_large"
                    tools:ignore="SpUsage" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_item_item_admin_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_item_item_admin_coin"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textSize="@dimen/text_large"
                    tools:ignore="SpUsage" />

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_item_item_admin_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/default_margin_5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:textSize="@dimen/text_normal"
                    tools:ignore="SpUsage" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
