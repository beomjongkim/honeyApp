<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".point.view.ItemMainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_frag_item_main_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray"
            android:orientation="vertical">

            <!-- 현재보유코인 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_40dp">

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_frag_item_main_now_coin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/default_margin_20dp"
                    android:gravity="center_vertical"
                    android:text="@string/item_now_coin_title"
                    android:textSize="@dimen/text_large"
                    tools:ignore="SpUsage" />

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_frag_item_main_now_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/default_margin_10dp"
                    android:layout_marginRight="@dimen/default_margin_20dp"
                    android:layout_toRightOf="@+id/tv_frag_item_main_now_coin_title"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    tools:ignore="SpUsage" />
            </RelativeLayout>

            <!-- 적립코인 -->
            <LinearLayout
                android:id="@+id/ll_frag_item_main_save_coin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_margin_30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                                style="@style/baseTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin_20dp"
                    android:gravity="center_vertical"
                    android:text="@string/item_save_coin_title"
                    android:textSize="@dimen/text_normal"
                    tools:ignore="SpUsage" />

                <TextView
                                style="@style/baseTextViewStyle"
                    android:id="@+id/tv_frag_item_main_save_coin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_margin_10dp"
                    android:layout_marginRight="@dimen/default_margin_20dp"
                    android:gravity="right|center_vertical"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <!-- 마켓으로 이동 -->
            <ImageView
                android:id="@+id/iv_frag_item_main_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_20dp"
                android:layout_marginTop="@dimen/default_margin_10dp"
                android:layout_marginRight="@dimen/default_margin_20dp"
                android:background="@drawable/btn_select_market" />

            <!-- 아이템관리 충전하기 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_10dp"
                android:layout_marginTop="@dimen/default_margin_15dp"
                android:layout_marginRight="@dimen/default_margin_10dp"
                android:orientation="horizontal">

                <!-- 아이템관리 -->
                <Button
                    android:id="@+id/btn_frag_item_main_admin"
                    android:layout_width="@dimen/default_margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_tab"
                    android:text="@string/item_administration"
                    android:textColor="@color/tab_select_text_color" />

                <!-- 충전하기 -->
                <Button
                    android:id="@+id/btn_frag_item_main_charge"
                    android:layout_width="@dimen/default_margin_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/item_tab"
                    android:text="@string/item_charge"
                    android:textColor="@color/tab_select_text_color" />
            </LinearLayout>
        </LinearLayout>

        <!-- 메인화면 -->
        <FrameLayout
            android:id="@+id/fl_frag_item_main_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_frag_item_main_top_layout" />

        <!-- 프로그래스바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/progress_size"
                android:layout_height="@dimen/progress_size" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
